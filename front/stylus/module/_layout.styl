.l-header
  width 100%
  line-height 40px
  height 40px
  background #fff
  color #fff
  &__sitename
    color thank-color--primary
    font-size font-size--default + 6px
  &__description
    color #ccc
    font-size font-size--default
    line-height 40px
  &--post
    opacity 1
    position fixed
    top 0
    left 0
    width 100%
    line-height 50px
    height 50px
    background #fff
    border-bottom 1px solid #d6d6d6
    z-index 1000
    &__wrap
      & > ul
        list-style none
        margin-bottom 0
        padding-left 0
    &__list
      &__icon
        & > i, & > a > i
          font-size font-size--default + 6px
      &__back
        padding-right 15px
        & > a
          color thank-color--primary
      &__title
        line-height 47px
        font-size font-size--default + 1px
      &__favorite
        color thank-color--pink
        padding-right 10px
      &__share
        color thank-color--secondary
    

.l-nav
  &--header
    width 100%
    overflow scroll
    border-bottom 1px solid #ccc
    position relative
    height 48px
    line-height 48px
    vertical-align middle
    &__wrap
      width 100%
      list-style none
      margin-bottom 0
      padding-left 0
      & > li
        font-size font-size--default
        color #666
        padding 0px 10px
        cursor pointer
    &__underline
      position absolute
      bottom 0
      height 2px
      background thank-color--primary
      transition all .2s ease