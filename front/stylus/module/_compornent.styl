.c-post
  padding 7px 0
  border-bottom 1px solid #eee
  &--icatch
    width 80px
    height 80px
    border-radius 4px
  &--wrap
    position relative
    padding 5px 0
    height transparent
    line-height transparent
    &__title
      display block
      & > h2
        font-size font-size--default
        line-height 20px
        color #333
    &__category
      position absolute
      bottom 0
      right 0
      &__link
        display inline-block
        & > h3
          display inline-block
          font-size font-size--default
          margin-right 4px
          &.green
            color #20bf6b
          &.blue
            color #2d98da
          &.pink
            color #e84393
          &.orange
            color #F79F1F

.c-overlay
  z-index 99998
  position fixed
  top 0
  left 0
  width 100%
  height 100%

.c-loading
  z-index 99999
  display block
  position fixed
  top 48%
  left 50%
  font-size 40px
  color thank-color--primary